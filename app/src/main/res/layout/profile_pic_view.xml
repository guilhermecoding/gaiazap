<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_pic_image_view"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerInParent="false"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/my_primary"
        android:padding="4dp"
        android:src="@drawable/round_person_24"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/status_indicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignEnd="@id/profile_pic_image_view"
        android:layout_alignBottom="@id/profile_pic_image_view"
        android:src="@drawable/offline_indicator"
        android:visibility="gone"/>

</RelativeLayout>